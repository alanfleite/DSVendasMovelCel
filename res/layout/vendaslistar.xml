            android:layout_marginRight="116dp"
            android:layout_marginTop="-17dp"
            android:layout_x="157dp"
            android:layout_y="8dp"
            android:drawableLeft="@drawable/apagar"
            android:text="Apagar" />
 -->
    </AbsoluteLayout>
</AbsoluteLayout>